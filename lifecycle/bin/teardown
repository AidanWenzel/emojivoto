#!/bin/sh

set -e

NAMESPACES=${1:-1}

echo "Tearing down $NAMESPACES injected, TLS, and baseline namespaces...\n"

TO_DELETE=""
for i in `seq 1 $NAMESPACES`;
do
  NS=lifecycle$i
  NS_TLS=$NS-tls
  NS_BASELINE=$NS-baseline

  TO_DELETE="$TO_DELETE $NS $NS_TLS $NS_BASELINE"
done
kubectl delete ns "$TO_DELETE" || true
